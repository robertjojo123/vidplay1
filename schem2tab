import nbtlib
import os

# Load the schematic file and print the structure
def load_schematic(filename):
    try:
        # Check if file exists
        if not os.path.isfile(filename):
            raise FileNotFoundError(f"The file '{filename}' was not found.")
        
        # Load the .schematic file using nbtlib
        schematic_data = nbtlib.load(filename)
        
        # Print the structure of the NBT file to understand its contents
        print("Schematic structure:", schematic_data)
        print("Keys in schematic data:", schematic_data.keys())
        
        return schematic_data
    except Exception as e:
        print(f"Error loading schematic: {e}")
        return None

# Main function to load the schematic and inspect the structure
def main():
    # Prompt the user for the schematic file path
    schematic_file = input("Enter the path to the schematic file (e.g., 'schematic.schematic'): ").strip()
    
    schematic_data = load_schematic(schematic_file)
    if schematic_data is not None:
        print("Loaded schematic successfully. Inspect the structure above.")
    else:
        print("Failed to load schematic data.")

if __name__ == "__main__":
    main()
